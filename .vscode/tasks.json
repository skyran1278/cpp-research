{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: clang++ build active file",
      "command": "/usr/bin/clang++",
      "args": [
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-g",

        // debugging options
        "-ggdb",

        // optimization options
        // "-O2",
        // "-DNDEBUG",

        // Disable compiler extensions to ensure your programs (and coding practices) remain compliant with C++ standards and will work on any system.
        "-pedantic-errors",

        // Increasing your warning levels
        "-Wall",
        "-Weffc++",
        "-Wextra",
        "-Wconversion",
        "-Wsign-conversion",

        // Enable “Treat warnings as errors”. This will force you to resolve all issues causing warnings.
        "-Werror",

        // language standard
        "-std=c++23",

        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.o"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
